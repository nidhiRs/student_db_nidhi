<p id="notice"><%= notice %></p>

<h1>Pending Students</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Institution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.address %></td>
        <td><%= student.email %></td>
        <td><%= student.institution.name %></td>
        <td><%= link_to 'Approve', approve_student_student_path(student), method: :post %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to Student List', students_path %>
